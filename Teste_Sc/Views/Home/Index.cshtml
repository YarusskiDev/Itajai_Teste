@model Teste_Sc.ViewModels.DistritosViewModel


<H1>Estados brasileiros </H1>




<div class="container">
    <div class="col-md-4">
        <form asp-action="EnviaPlanilhaCidadesDoEstado">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" class="form-control" />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Busca por Estado" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container">
    <form asp-action="EnviaPlanilhaComTodosEstados">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1>Quer receber por email a lista dos estados do brasil? Click no botão abaixo ;)</h1>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Planilha completa" class="btn btn-primary" />
        </div>
    </form>
</div>